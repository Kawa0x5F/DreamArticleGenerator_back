{
  "openapi": "3.0.0",
  "info": {
    "title": "Chat & Article API",
    "description": "API for chat interactions and article generation based on chat history.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/chat/get_id": {
      "get": {
        "summary": "Generate and retrieve a new chat session ID",
        "responses": {
          "200": {
            "description": "Successfully generated a session ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "session_id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/chat/{id}": {
      "post": {
        "summary": "Send a chat message to a specific session",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Chat session ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "User's chat message"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully processed chat message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/articles/generate/{id}": {
      "get": {
        "summary": "Generate an article from chat history for a specific session",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Chat session ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully generated an article",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleGenerate"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/articles": {
      "post": {
        "summary": "データベースへ記事の登録を行う",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ArticleCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Article successfully created"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      },
      "get": {
        "summary": "Get all article summaries",
        "responses": {
          "200": {
            "description": "Successfully retrieved articles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ArticleAll"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/articles/{id}": {
      "get": {
        "summary": "Get a single article by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Article ID to fetch a specific article"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved article",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleDetail"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ArticleFullDatabaseElemet": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "author": { "type": "string" },
          "timestamp": { "type": "string", "example": "YYYY年MM月DD日" },
          "content": { "type": "string" },
          "summary": { "type": "string" }
        }
      },
      "ArticleGenerate": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "content": { "type": "string" }
        }
      },
      "ArticleAll": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "timestamp": { "type": "string", "example": "YYYY年MM月DD日" },
          "summary": { "type": "string" }
        }
      },
      "ArticleDetail": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "author": { "type": "string" },
          "timestamp": { "type": "string", "example": "YYYY年MM月DD日" },
          "content": { "type": "string" }
        }
      },
      "ArticleCreateRequest": {
        "type": "object",
        "required": ["title", "content", "author"],
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" },
          "author": { "type": "string" }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request due to invalid input"
      },
      "NotFound": {
        "description": "Resource not found"
      },
      "InternalServerError": {
        "description": "Unexpected server error"
      }
    }
  }
}
